<%= form_for @giftmoji do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>
    <%= f.label "Tag" %>
    <%= f.text_field :tag %>
    <%= f.label "Price" %>
    <%= f.number_field :price %>
    <%= f.label "Emotions" %>
    <%= f.collection_check_boxes :emotion_ids, Emotion.all, :id, :name %>
    <%= f.fields_for :emotions, giftmoji.emotions.build do |emotions_fields| %>
      <%= emotions_fields.text_field :name %>
    <% end %>
    
    <%= f.submit %>
  <% end %>